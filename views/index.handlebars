<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <!-- set action -->
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <!-- input -->
          <input type="text" name="keyword" value="{{ keyword }}" class="form-control" placeholder="輸入餐廳、分類"
            aria-label="Restaurant Name..." aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button">
              <i class="fas fa-search"></i>
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- if: 單純判斷變數是否存在，存在的話中間 html 會被解析 -->
{{#if notFound}}
<div class="alert alert-danger mt-3 mx-auto text-center" role="alert">
  找不到符合條件的餐廳 Ｔ＿Ｔ
</div>
{{/if}}


<!-- restaurant list -->
<div class="container mt-5 px-md-5">
  <div class="row">
    {{#each restaurants}}
    <div class="col-12 col-sm-6 col-md-4">
      <a href="/restaurants/{{this.id}}" class="text-secondary">
        <div class="card mb-3">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}" />
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{this.name}}</h6>

            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i>
              {{this.category}}
            </div>

            <span class="badge rounded-pill bg-danger font-weight-normal">
              {{ this.rating }}
              <i class="fas fa-star fa-xs"></i>
            </span>

          </div>
        </div>
      </a>
    </div>
    {{/each}}
  </div>
</div>